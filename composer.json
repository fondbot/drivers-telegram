{
  "name": "fondbot/telegram",
  "description": "Telegram driver for FondBot",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Vladimir Yuldashev",
      "email": "vladimir@fondbot.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "fondbot/framework": "^2.0"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.6",
    "larapack/dd": "^1.1",
    "mockery/mockery": "^0.9.9",
    "phpunit/phpunit": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "FondBot\\Drivers\\Telegram\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "fondbot": {
        "driver": "FondBot\\Drivers\\Telegram\\TelegramDriver"
    },
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "cs": "php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
